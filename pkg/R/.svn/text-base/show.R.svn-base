#  PvInd ------------------------------------------------
setMethod(
  "show",
  "PvInd",
  function (object){
    cat("\nS4 class:", as.character(class(object)))    
    cat("\n@drug: ", nrow(object@drug), "x", ncol(object@drug), "Drug matrix\n" )
    cat ("Drug matrix head\n ")
    print(head(object@drug[,1:6]))
    cat("@ae: ", nrow(object@ae), "x", ncol(object@ae), "AE matrix\n" )
    print(head(object@ae[,1:6]))
    cat ("AE matrix head \n ")            
    cat("@dMargin:", head(object@dMargin), "\n" )   
    cat("@aeMargin:", head(object@aeMargin), "\n" )         
    if(!is.null(object@cov)) print(head(object@cov))
  }
)# end show method for PvInd

